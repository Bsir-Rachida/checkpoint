{% extends 'base.html.twig' %}

{% block title %}Project{% endblock %}

{% block body %}
<main class="container">
  {{ include('items/_navbarAdmin.html.twig') }}
    <h1>Projet {{ project.name }}</h1>

   <table class="table  table-striped  table-hover mt-3">
        <tbody>
          
            <tr>
                <th>Name</th>
                <td>{{ project.name }}</td>
            </tr>
            <tr>
                <th>Image</th>
                <td><img src="{{ vich_uploader_asset(project) }}" width="100" height="100" alt="{{ project.name}}"/></td>
            </tr>
            <tr>
                <th>Date</th>
                <td>{{ project.date ? project.date|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ project.description }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('admin_project_index') }}"class="btn btn-outline-dark mb-5">Retour</a>

    <a href="{{ path('admin_project_edit', {'id': project.id}) }}"class="btn btn-primary mb-5">Modifier</a>

   
    </main>
{% endblock %}
